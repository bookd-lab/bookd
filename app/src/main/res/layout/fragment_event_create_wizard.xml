<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:lineSpacingMultiplier="1.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvInstruction"
        android:text="@string/create_event_step_1"
        tools:text="@string/create_event_step_1"
        android:textSize="@dimen/question_font"
        />

    <EditText
        android:padding="16dp"
        android:id="@+id/etAnswer"
        android:lineSpacingMultiplier="1.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/answer_font"
        android:hint="@string/create_event_step_1_hint"
        tools:hint="@string/create_event_step_1_hint"
        android:layout_below="@id/tvInstruction"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/tvSwipeNext"
        android:text="@string/swipe_instruction"
        tools:text="@string/swipe_instruction"
        android:textSize="24sp"
        android:layout_below="@id/etAnswer"
        android:gravity="center_horizontal"/>
    </RelativeLayout>
</ScrollView>