<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="8dp"
    app:contentPadding="16dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvReviewer"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivReviewer"
            android:text="John Smith"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvReviewDate"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivReviewer"
            android:layout_below="@id/tvReviewer"
            android:text="July 2016"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvReviewBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivReviewer"
            android:text="@string/lorem"
            android:textSize="14sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivReviewer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:border_color="@android:color/white"
            app:border_width="2dp"
            android:src="@drawable/account"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:id="@+id/ratingBar"
            android:isIndicator="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>